  "repository": {
    "type": "git",
    "url": "git+https://github.com/adorratm/vue-hot-toast.git"
  },
  "bugs": {
    "url": "https://github.com/adorratm/vue-hot-toast/issues"
  },
  "homepage": "https://github.com/adorratm/vue-hot-toast#readme",
  "engines": {
    "node": ">=14.0.0"
  },
