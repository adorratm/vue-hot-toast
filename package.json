{
  "name": "@adorratm/vue-hot-toast",
  "version": "1.0.4",
  "description": "Smoking hot Notifications for Vue.js ðŸ”¥ - Vue 2/3 & Nuxt 2/3/4 Support",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./Toaster.vue": "./src/Toaster.vue",
    "./style.css": "./dist/style.css",
    "./plugin": {
      "types": "./dist/plugin.d.ts",
      "import": "./dist/plugin.js",
      "require": "./dist/plugin.cjs"
    },
    "./nuxt": {
      "import": "./nuxt/module.mjs",
      "require": "./nuxt/module.mjs"
    },
    "./nuxt2": "./nuxt2/module.js",
    "./nuxt4": {
      "import": "./nuxt4/module.mjs",
      "require": "./nuxt4/module.cjs"
    }
  },
  "files": [
    "dist",
    "src",
    "nuxt",
    "nuxt2",
    "nuxt4",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsup",
    "prepublishOnly": "npm run build",
    "typecheck": "vue-tsc --noEmit",
    "prepack": "npm run build"
  },
  "keywords": [
    "vue",
    "vue2",
    "vue3",
    "nuxt",
    "nuxt2",
    "nuxt3",
    "nuxt4",
